<resources>
    <declare-styleable name="BbImageView">
        <!-- Whether to show a blurred background -->
        <attr name="show_blurred_background" format="boolean" />
        <!-- Blur radius to use -->
        <attr name="blur_radius" format="float" />
        <!-- Whether to hide the main image -->
        <attr name="hide_main_image" format="boolean" />
    </declare-styleable>c
    <declare-styleable name="BbImageViewSwitcher" parent="BbImageView">
        <!-- Image source drawable-->
        <attr name="src" format="reference" />
        <!-- Whether to show a blurred background -->
        <attr name="show_blurred_background" />
        <!-- Blur radius to use -->
        <attr name="blur_radius" />
        <!-- Whether to hide the main image -->
        <attr name="hide_main_image" />
    </declare-styleable>
</resources>
